<div
  class="relative min-h-screen flex flex-col items-center justify-center mt-12"
>

  <div class="bg-white shadow-md rounded-3xl p-4">
    <video width="1026" height="753" controls autoplay id="video">
    </video>
  </div>

  <div class="grid mt-8 gap-8 grid-cols-1 md:grid-cols-2 xl:grid-cols-2 w-7/12">
    {{#video-list data}}
      <div class="flex flex-col">
        <div class="bg-white shadow-md rounded-3xl p-4">
          <div class="flex flex-col lg:flex">
            <div class="h-full w-full lg:h-48 lg:mb-0 mb-3">
              <img
                src="{{snippet.thumbnails.medium.url}}"
                alt="Just a flower"
                class="w-full lg:object-cover lg:h-48 rounded-2xl"
              />
            </div>
            <div class="flex-auto ml-3 justify-evenly py-2">
              <div class="flex flex-wrap">
                <div class="w-full flex-none text-xs text-blue-700 font-medium">
                  Shop
                </div>
                <h2 class="flex-auto text-lg font-sm">{{snippet.title}}</h2>
              </div>
              <p class="mt-3"></p>
              <div class="flex py-4 text-sm text-gray-600">
                <div class="flex-1 inline-flex items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 mr-3"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    >
                    </path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                    ></path>
                  </svg>
                  <p class="">{{snippet.channelTitle}}</p>
                </div>
                <div class="flex-1 inline-flex items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 mr-2"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  <p class="">{{snippet.publishTime}}</p>
                </div>
              </div>
              <div class="flex p-4 pb-2 border-t border-gray-200"></div>
              <div class="flex space-x-3 text-sm font-medium justify-end">

                <button
                  class="mb-2 md:mb-0 bg-gray-900 px-5 py-2 shadow-sm tracking-wider text-white rounded-full hover:bg-gray-800"
                  type="button"
                  aria-label="like"
                  onclick="seeMovie('{{oldSearch}}','{{id.videoId}}')"
                >See Video</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/video-list}}
  </div>
</div>